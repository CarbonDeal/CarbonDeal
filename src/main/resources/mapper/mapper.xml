<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.springboot.backend.dao.mapper">

<!--交易信息SQL-->
    <select id="findAllDeal" resultType="com.springboot.backend.bean.DealInfo">
        select * from DealInfo;
    </select>
    <select id="findDealNum" resultType="com.springboot.backend.bean.DealNum">
        select housetext as city,sum(dealnum) as value from DealInfo group by housetext;
    </select>

    <select id="getcarbonTradingeAmountChartData" resultType="com.springboot.backend.bean.CAQuaryResult">
        select housetext as city,sum(dealamount) as value
        from data.DealInfo
        group by housetext;
    </select>

    <select id="findAllGHN" resultType="com.springboot.backend.bean.GuiHuaNews">
        select * from GuiHuaNews;
    </select>

    <select id="findAllJRN" resultType="com.springboot.backend.bean.JinRongNews">
        select * from JinRongNews;
    </select>

    <select id="findAllTJY" resultType="com.springboot.backend.bean.TanJiaoYi">
        select * from TanJiaoYi;
    </select>

    <select id="findAllTQQ" resultType="com.springboot.backend.bean.TanQiQuan">
        select * from TanQiQuan;
    </select>

    <select id="findAllZCFG" resultType="com.springboot.backend.bean.ZhengCeFaGui">
        select * from ZhengCeFaGui;
    </select>

<!--用户信息SQL-->
<!--登录,根据activeStatus=1 进行查询-->
    <select id="login" parameterType="com.springboot.backend.bean.User" resultType="java.lang.Integer">
        select user.userId
        from user
        where username = #{username}
          and password = #{password}
          and active_status = 1
    </select>
<!--注册-->
    <insert id="regist" parameterType="com.springboot.backend.bean.User" >
        insert into user(userId,username,password,email,active_status,active_code)
        values(#{userId},#{username},#{password},#{email},#{activeStatus},#{activeCode})
    </insert>
<!--按激活码取用户-->
    <select id="selectUserByActiveCode" parameterType="String" resultType="com.springboot.backend.bean.User">
        select * from user where active_code = #{activeCode}
     </select>
    <!--激活账户，修改用户状态-->
    <update id="update" parameterType="com.springboot.backend.bean.User">
      update user
      set active_status=#{activeStatus},username=#{username},password=#{password},
          email=#{email}, active_status=#{activeStatus},active_code=#{activeCode}
      where id=#{userId}
    </update>

</mapper>